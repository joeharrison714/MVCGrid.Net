<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MVCGrid.Net</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/sh/shCore.css" rel="stylesheet" />
    <link href="~/Content/sh/shThemeDefault.css" rel="stylesheet" />
    @RenderSection("head", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MVCGrid.Net", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Getting Started", "Index", "gettingstarted")</li>
                    <li>@Html.ActionLink("Demos", "index", "demo")</li>
                    <li>@Html.ActionLink("Documentation", "index", "documentation")</li>
                    <li>@Html.ActionLink("Download", "index", "download")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&nbsp;</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="/MVCGridHandler.axd/script.js"></script>
    <script src="~/Content/sh/shCore.js"></script>
    <script src="~/Content/sh/shBrushJScript.js"></script>
    <script src="~/Content/sh/shBrushCSharp.js"></script>
    <script type="text/javascript">
        SyntaxHighlighter.all();
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
